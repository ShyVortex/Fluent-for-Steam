"resource/layout/overlay_communityhubpanel.layout"
{
	controls
	{
		CommunityHubDetailPanel { controlname="COverlay_Details_CommunityHub_Panel" style=detailsbox }
		TitleText { controlname="label" labeltext="#Overlay_CommunityHub_Panel_Title" style=detailsboxtitle }
		NumContributionsText { controlname="label" labeltext="#Overlay_CommunityHub_Panel_NumContributions"  style=highlight }

		ViewCommunityHub { controlname="Button" labeltext="#Overlay_View_CommunityHub" command="viewcommunityhub" }
	}
	
	styles
	{	
		detailsboxtitle {
			font-size=19
			bgcolor=none
			font-family=semibold2
			textcolor=none
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibold2
			textcolor=white
		}
		highlight {

			textcolor=none
		}
		Button
		{
			bgcolor="none"
			padding=0
			textcolor="none"
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/tile)"
				2="image( x0, y0, x0, y0+0, overlay/community)"
			}
		}
		Button:hover
		{
			bgcolor="none"
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/hover)"
				2="image( x0, y0, x0, y0+0, overlay/color/community)"
				
			}	
		}
		Button:active
		{
			bgcolor="red"
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/hover)"
				2="image( x0, y0+0, x0, y0+0, overlay/hover)"
				3="image( x0, y0, x0, y0+0, overlay/color/community)"
			}		
		}
	}
	layout
	{
		///====label====///
		place { controls=ViewCommunityHub x=14 y=10 width=64 height=58 }

		region {

			name="text"
			align=bottom
						


		}	
		place { 
			
			
			height=90
			width=max
			align=left
			margin-left=66
		    control="TitleText"   
			
	    }
		place { 

			region="text"
			control="NumContributionsText" 
		

			
			
			}
	
		
		
	}
}

		
		