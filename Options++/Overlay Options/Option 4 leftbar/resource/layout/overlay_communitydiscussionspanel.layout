"resource/layout/overlay_communitydiscussionspanel.layout"
{
	controls
	{
		CommunityDiscussionsDetailPanel { controlname="COverlay_Details_CommunityDiscussions_Panel" style=detailsbox }
		TitleText { controlname="label" labeltext="#Overlay_CommunityDiscussions_Panel_Title" style=detailsboxtitle }
		NumDiscussionsText { controlname="label" labeltext="#Overlay_CommunityDiscussions_Panel_NumDiscussions"  style=highlight }
		ViewCommunityDiscussions { controlname="Button" labeltext="#Overlay_View_CommunityDiscussions" command="viewcommunitydiscussions" }
	}
	colors
	{
	}
	styles
	{
		
		PreviewImage
		{
		}
		detailsboxtitle {
			font-size=19
			bgcolor=none
			font-family=semibold2
			textcolor=none
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibold2
			textcolor=white
		}
		highlight {

			textcolor=white
			font-size=19
			font-family=basefont
			textcolor=white
		}
		Button
		{
			bgcolor="none"
			padding=0
			textcolor="none"
			render_bg
			{
				
				2="image( x0, y0+0, x0, y0+0, overlay/discussions)"
			}
		}
		Button:hover
		{
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/hover)"
				2="image( x0, y0+0, x0, y0+0, overlay/color/discussions)"
				
			}	
		}
		Button:active
		{
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/hover)"
				2="image( x0, y0+0, x0, y0+0, overlay/hover)"
				3="image( x0, y0+0, x0, y0+0, overlay/color/discussions)"
			}		
		}
	}
	layout
	{
		place { controls=viewcommunitydiscussions x=14 y=10 width=64 height=58 }

		
		place { 
			
			
			height=90
			width=max
			align=left
			margin-left=66
		    control="TitleText"   
			
	    }
		place { 

			
			dir=down
			margin-top=2
			start=titletext
			control="NumDiscussionsText" 
			

			
			
			}

		
	}
}