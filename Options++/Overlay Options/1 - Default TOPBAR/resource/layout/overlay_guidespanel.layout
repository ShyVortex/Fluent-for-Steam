"resource/layout/overlay_guidespanel.layout"
{
	controls
	{
		GuidesDetailPanel { controlname="COverlay_Details_Guides_Panel" style=detailsbox }
		TitleText { controlname="label" labeltext="#Overlay_Guides_Panel_Title" style=detailsboxtitle }
		NumGuidesText { controlname="label" labeltext="#Overlay_Guides_Panel_NumGuides"  style=highlight }

		ViewGuides { controlname="Button" labeltext="#Overlay_View_Guides" command="viewguides" }
	}
	colors
	{
	}
	styles
	{
		PreviewImage
		{
		}
		detailsboxtitle {
			font-size=17
			bgcolor=none
			font-family=semibold2
			textcolor=accent
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibolddisplay
			textcolor=white
		}
		highlight {

			textcolor=white
			font-size=19
			font-family=basefont
			textcolor=none
		}
		Button
		{
			bgcolor="none"
			padding=0
			textcolor="none"
			render
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle)"
				2="image( x0, y0+2, x0, y0+0, overlay/topbar/guides_normal)"
				
			}
		}
		Button:hover
		{
			bgcolor="none"
			render{

			}
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle)"
				2="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/guides)"
				
				
			}	
		}
		Button:active
		{
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle)"
				2="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/guides)"
			}		
		}
	}
	layout
	{
	
		///====label====///
		place { controls=ViewGuides width=max height=max }

		region {

			name="text"
			align=bottom
						


		}	
		place { 
			
			margin-top=48
			align=top-center
		    control="TitleText"   
			
	    }
		place { 

			
			control="NumGuidesText" 
			margin-top="2"
			start="TitleText"
			dir=down

			
			
			}


		//ssssssssssss
		place { control=*guideitem y=68 width=max height=68 dir=down }
	}
}