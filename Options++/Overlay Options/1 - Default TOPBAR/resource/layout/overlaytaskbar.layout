
"resource/layout/overlaytaskbar.layout"
{
	controls
	{
		TaskbarPanel
		{
			controlname="EditablePanel"
		}
		SettingsButton
		{
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_Settings"
			style=taskbar
		}
		WebBrowserButton
		{
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_WebBrowser"
			style=taskbar
		}
		MusicPlayerButton
		{
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_Music"
			style=taskbar
		}
		
		SteamLogo	
		{ 
			controlname="ImagePanel" zpos=1 image="resource/steam_logo_big"
			scaleimage=1
		}
		
		view_friends
		{
			ControlName=URLLabel
			labelText="#Steam_ViewFriends"
			command="OpenFriendsDialog"
			
			style="view_friends"
			textAlignment=west
		}
	}
	
	styles
	{
		taskbar
		{
			
			bgcolor=none
			textcolor=none
			render_bg
			{
							
			}	
			render{}
		
			
		}
		
		taskbar:hover
		{
			bgcolor=none
			textcolor=none
			render{}
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/hover)"	
						
			}	
		}
		view_friends{
			bgcolor=none
			textcolor=none
			render_bg
			{	}	
			render{}
		}
		
		SteamLogo {
			render_bg{}
			render{}
		}
		
		EditablePanel {
			bgcolor=none
			render_bg
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/border_left_settings)"					
			}	
		
		}
	}
	
	layout
	{
		region 	{name=bottom align=bottom width=max height=100 }
		
		place { control="TaskbarPanel"  dir=right height=44 width=44 spacing=0 align=bottom}
		place { control="SteamLogo"  x=-9999 width=0 height=0 }
		place { controls="SettingsButton,WebBrowserButton" dir=right height=82 width=44 margin-left=4 spacing=4 align=bottom}	

		place { control="view_friends,MusicPlayerButton,ScreenshotsButton" height=0 width=0 align=right dir=right margin-right=9999 }
	}	
}
