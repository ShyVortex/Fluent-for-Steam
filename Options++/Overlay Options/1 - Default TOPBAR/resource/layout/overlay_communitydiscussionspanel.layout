"resource/layout/overlay_communitydiscussionspanel.layout"
{
	controls
	{
		CommunityDiscussionsDetailPanel { controlname="COverlay_Details_CommunityDiscussions_Panel" style=detailsbox }
		TitleText { controlname="label" labeltext="#Overlay_CommunityDiscussions_Panel_Title" style=detailsboxtitle }
		NumDiscussionsText { controlname="label" labeltext="#Overlay_CommunityDiscussions_Panel_NumDiscussions"  style=highlight }
		ViewCommunityDiscussions { controlname="Button" labeltext="#Overlay_View_CommunityDiscussions" command="viewcommunitydiscussions" }
	}
	colors
	{
	}
	styles
	{
		
		PreviewImage
		{
		}
		detailsboxtitle {
			font-size=17
			bgcolor=none
			font-family=semibold2
			textcolor=accent
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibold2
				textcolor=none
		}
		highlight {

			textcolor=none
			font-size=19
			font-family=basefont
			
		}
		Button
		{
			bgcolor="none"
			padding=0
			textcolor="none"
			render
			{
				1="image( x0, y0+0, x0, y0+0, overlay/topbar/rectangle)"
				2="image( x0, y0+2, x0, y0+0, overlay/topbar/discussions_normal)"
				
				
			}
			render_bg {

			}
		}
		Button:hover
		{
			bgcolor="none"
			render{
				
			}
			render_bg
			{
				0="image( x0, y0, x0, y0+0, overlay/topbar/rectangle)"
				1="image( x0, y0, x0, y0+0, overlay/topbar/rectangle_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/discussions)"
				
				
			}	
		
		}
		Button:active
		{
			render_bg
			{
				0="image( x0, y0, x0, y0+0, overlay/topbar/rectangle)"
				1="image( x0, y0, x0, y0+0, overlay/topbar/rectangle_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/discussions)"
			}		
		}
	}
	layout
	{
		place { controls=viewcommunitydiscussions width=max height=max }

		
		place { 
			
			margin-top=48
			align=top-center
		    control="TitleText"   
			
	    }
		place { 

			region="text"
			control="NumDiscussionsText" 
		

			
			
			}
		
		
	}
}