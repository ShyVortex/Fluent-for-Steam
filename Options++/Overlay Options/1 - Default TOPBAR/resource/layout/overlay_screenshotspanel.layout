"resource/layout/overlay_screenshotspanel.layout"
{
	controls
	{
		TitleText { controlname="label" labeltext="#Overlay_Screenshots_Panel_Title" style=detailsboxtitle }
		InstructionText { controlname="label" labeltext="#Overlay_Screenshots_Press_Hotkey"  style=highlight }
		ViewScreenshots { controlname="Button" labeltext="#Overlay_View_Screenshots" command="viewscreenshots" }
		SetShortcut { controlname="Button" labeltext="#Overlay_Set_Shortcut" command="setshortcut" }
	}
	styles
	{	

		highlight {

			textcolor=none
		}
		
		detailsboxtitle {
			font-size=17
			bgcolor=none
			font-family=semibold2
			textcolor=accent
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibolddisplay
			textcolor=none
		}
		Button
		{
			bgcolor="none"
			textcolor="none"
			render_bg {}
			render
			{
				1="image( x0, y0, x0, y0+0, overlay/topbar/border_right)"
				2="image( x0, y0+2, x0, y0+0, overlay/topbar/screenshot_normal)"

			}
		}
		Button:hover
		{
			bgcolor="none"
			render{
			}
			render_bg
			{
				
				1="image( x0, y0, x0, y0+0, overlay/topbar/border_right_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/screenshot)"
				
			}	
		}
		Button:active
		{
			render_bg
			{
				1="image( x0, y0, x0, y0+0, overlay/topbar/border_right)"
				2="image( x0, y0, x0, y0+0, overlay/topbar/border_right_hover)"
				3="image( x0+35, y0+14, x0, y0+0, graphics/assets/accent/icons/topbar/screenshot)"
			}		
		}
	}
	layout
	{
	

	///====label====///
		place { controls=ViewScreenshots width=max height=max }

		
		place { 
			
				
			margin-top=48
			align=top-center
		    control="TitleText"   
			
	    }
		place { 

			region="text"
			control="InstructionText" 
			margin-top="2"
			dir=down
			start=TitleText

			
			
			}
		place { control=SetShortcut margin-left=9999 height="24" spacing=10 align=bottom }	
	
		
	}
}