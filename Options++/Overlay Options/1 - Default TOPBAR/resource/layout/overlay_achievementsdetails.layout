"resource/layout/overlay_achievementsdetails.layout"
{
	styles
	{
		detailsbox {
			bgcolor=none
		}
		detailsboxtitle {
			font-size=18
			bgcolor=none
			font-family=semibolddisplay
			textcolor=none
		}
		detailsboxtitle:hover {
			font-size=20
			inset="50 0 0 0"
			font-family=semibolddisplay
			textcolor=none
		}
		highlight {
			textcolor=none
		}
		Button
		{
			bgcolor="none"
			padding=0
			textcolor="none"
			render_bg
			{
				
				1="image( x0-46, y0-16, x0, y0+0, overlay/topbar/trophy)"
			
			}
		
		}
		Button:hover
		{
			bgcolor="white07"
			padding=0
			textcolor="none"
			render_bg
			{
				
				1="image( x0-46, y0-16, x0, y0+0, overlay/topbar/trophy)"
			
			}
		
		}
			progressbackground
		{
			bgcolor="none"
			render_bg
			{
		
				0="fill(x0+2,y0+2,x1-2,y1-2, greytrophy)"

				///////////////////esquina izquierda inferior/////////////////////////////
				1="image(x0,y1-2,x0,y1,overlay/topbar/trophy_bar/bg/trophy_left_bar_color_2)"

				////////////////////parte inferior/////////////////////////////////////////
				2="fill(x0+2,y1-2,x1-2,y1, greytrophy)"
				
                ////////////medio de parte izquierda///////////////////////////////////////////////////
				3="fill(x0-3,y0+2,x0+2,y1-2, greytrophy)"
				
				//////////////////////////esquina izquierda superior///////////////////////////////////////////
				5="image(x0,y0,x0,y0, overlay/topbar/trophy_bar/bg/trophy_left_bar_color_1)"

                ////////////////////////Parte del medio superior//////////////////////////////
				6="fill(x0+2,y0,x1-2,y0+2, greytrophy)"

                //////////////medio derecha/////////////////////////////////////////////////////////////////////
				4="fill(x1-2,y0+2,x1+3,y1-2, greytrophy)"

				/////////////////////////esquina derecha superior///////////////////////////////////////////////
				7="image(x1-2,y0,x1,y0, overlay/topbar/trophy_bar/bg/trophy_right_bar_color_1)"
			
				/////////////////////esquina inferior derecha//////////////////////////////////////////////////////
				8="image(x1-3,y1-2,x1,y1,overlay/topbar/trophy_bar/bg/trophy_right_bar_color_2)"
			
			
			}
		
			
		}
		progressbarimage
		{
			bgcolor="none"
		
			render
			{
		
				0="fill(x0+2,y0+2,x1-2,y1-2, accent)"

				///////////////////esquina izquierda inferior/////////////////////////////
				1="image(x0,y1-2,x0,y1,overlay/topbar/trophy_bar/trophy_left_bar_color_2)"

				////////////////////parte inferior/////////////////////////////////////////
				2="fill(x0+2,y1-2,x1-2,y1, accent)"
				
                ////////////medio de parte izquierda///////////////////////////////////////////////////
				3="image_tiled(x0-3,y0+2,x0+2,y1-2, materiales/logros/mi)"
				
				//////////////////////////esquina izquierda superior///////////////////////////////////////////
				5="image(x0,y0,x0,y0, overlay/topbar/trophy_bar/trophy_left_bar_color_1)"

                ////////////////////////Parte del medio superior//////////////////////////////
				6="fill(x0+2,y0,x1-2,y0+2, accent)"

                //////////////medio derecha/////////////////////////////////////////////////////////////////////
				4="image_tiled(x1-2,y0+2,x1+3,y1-2, materiales/logros/md)"

				/////////////////////////esquina derecha superior///////////////////////////////////////////////
				7="image(x1-2,y0,x1,y0, overlay/topbar/trophy_bar/trophy_right_bar_color_1)"

				/////////////////////esquina inferior derecha//////////////////////////////////////////////////////
				8="image(x1-3,y1-2,x1,y1,overlay/topbar/trophy_bar/trophy_right_bar_color_2)"
			
			
			}
		}
	}
	layout
	{
		
	///====label====///
		place { controls=ViewAchievementsButton align=left width=42 height=42}

		
		place { 
			
			
			height=90
			width=max
			align=left
			margin-left=66
		    control="TitleText"   
			
	    }
		place { control=*achievement margin-left=9999 margin-top=200 height=1 width=1 dir=down  }
	
		place { 
			
			region="text"
		    control="ProgressTextEarned"   
			align=align
			
	    }
		
		region {	

			name="barra"
			align=bottom
			margin-top=20
			margin-left=52
			margin-right=0
			
			
		
		}
		
		place {

			region="barra"
			control="progressbackground" 
			width=max
			height=5
			
			}

		place {

			region="barra"
			control="progressbarimage"  
			height=5
			
			
			}

	
		
	}
	
}